{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--config",
                "Debug",
                "--parallel",
                "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--config",
                "Release",
                "--parallel",
                "4"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "clean"
            ],
            "group": "build"
        },
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "@CMAKE_BINARY_DIR@",
                "-S",
                "@CMAKE_SOURCE_DIR@",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build"
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "@CMAKE_BINARY_DIR@",
                "-S",
                "@CMAKE_SOURCE_DIR@",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "@CMAKE_BINARY_DIR@",
                "--output-on-failure",
                "--parallel",
                "4"
            ],
            "group": "test",
            "dependsOn": "Build Debug"
        },
        {
            "label": "Format All Code",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "format-all"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Check Code Format",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "format-all-check"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Clang-Tidy All",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "tidy-all"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Pre-commit Check",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "pre-commit-check"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Code Quality Check",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "@CMAKE_BINARY_DIR@",
                "--target",
                "code-quality"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}